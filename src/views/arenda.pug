extends layout/layout
block variables
  -var title = sitename+' - Аренда'
  -var n2 = true;
block content
  include blocks/blocks

  section.home-screen(data-mobile-window)
    .home-screen__background
      .image.image_cover.rellax(data-rellax-speed="-3")
        img(src="./img/PipelineIntegrity 1.jpg", alt="image").lazyload
    .home-screen__container
      .container.home-screen__nav
        a(href=proizvodstvo).button-text.home-screen__prev
          svg.icon
            use(xlink:href='./img/icons/icons.svg#arrow')
          span Производство
        a(href=remont).button-text.home-screen__next
          span Ремонт
          svg.icon
            use(xlink:href='./img/icons/icons.svg#arrow')
      .container.home-screen__content
        .row
          h1.home-screen__title.col-xxl-6.col-xl-7.col-lg-8 Предоставляем в аренду имеющееся оборудование
          p.h6.home-screen__text.col-xxl-3.col-lg-4.col-md-7.col-sm-8 В рамках программы научно-исследовательских и опытно-конструкторских работ (НИОКР)
        
    button.scroll-btn.home-screen__scroll(aria-label='scroll bottom' data-scroll='bottom')
      svg.icon
        use(xlink:href='./img/icons/icons.svg#arrow')

  section.arenda-info.bg-accent.bg-gradient
    .container.js-animate-fade
      h3.arenda-info__title В пользовании общества находится более
        span 200
        | единиц оборудования
      h6.arenda-info__text предназначенного для выполнения работ по врезке и перекрытию трубопроводов под давлением, диметром от Ду 50 до Ду 1420

  section.content-section.bg-gray.bg-gradient-skew
    .container
      +block1(
        'js-animate-top',
        '01', 
        'Аренда по всей стране', 
        'Все оборудование на сегодняшний день активно используется арендаторами по всей территории Российские Федерации.',
        'https://placehold.co/1000x1000/fff/393939?font=montserrat&text=Картинка',
        false
      )
      +block4(
        'js-animate-top',
        '02', 
        'Оборудование проходит осмотр и ремонт', 
        'После каждого использования весь комплект оборудования проходит плановый технический осмотр и при необходимости ремонт, согласно нормативам завода-изготовителя.',
        'https://placehold.co/1000x1000/fff/393939?font=montserrat&text=Картинка',
        false
      )
      
  include blocks/form-section